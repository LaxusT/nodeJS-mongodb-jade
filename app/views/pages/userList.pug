extends ../layout

block content
	.container
		.row
			table.table.table-hover.table-bordered
				thead
					tr
						th 名字
						th 密码
						th 查看
						th 更新
						th 删除
				tbody
					each item in users
						tr(class="item-id-" + item.id)
							td #{item.name}
							td #{item.password}
							td: a(target="_blank", href="../movie/" + item.id) 查看
							td: a(target="_blank", href="../admin/update/" + item.id) 修改
							td
								button.btn.btn-danger.del(type="button", data-id=item.id) 删除
