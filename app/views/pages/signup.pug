extends ../layout

block content
	.container
		.row
			.col-md-5
				form(method="POST" action="/user/signup")
					.modal-header 注册
					.modal-body 
						.form-group
							label(for="loginName") 用户名
							input#singupName.form-control(name="name" type="text")
						.form-group
							label(for="loginPassword") 密码
							input#singupName.form-control(name="password" type="password")
					.modal-footer
						button.btn.btn-default(type="button" data-dismiss="modal") 关闭
						button.btn.btn-success(type="submit") 登陆
